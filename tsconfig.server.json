{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/server",
        "src/configs"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}